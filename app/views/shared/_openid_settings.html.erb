	<%- if logged_in? -%>
		<div class="right_side">
			<div class="pad">
                                <h3>OpenID Settings</h3>
                                <ul id="navi">
                                        <% unless checkid_request %>
                                       	  <%= nav 'identity', identity_path(current_account), 'accounts' => ['show'] %>
                                          <%= nav 'profile', edit_account_path, 'accounts' => ['edit', 'update'] %>
                                          <%= nav 'personas', account_personas_path, 'personas' => [] %>
                                          <%= nav 'trusted sites', account_sites_path, 'sites' => [] %>
                                        <% else %>
                                          <%= nav 'current verification request', proceed_path, 'server' => [] %>
                                        <% end %>
                                </ul>
			</div>
		</div>
	<%- end -%>


